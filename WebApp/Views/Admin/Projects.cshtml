@model IEnumerable<Business.Models.Project>

﻿@{
    ViewData["Title"] = "Projects";
}

<section id="clients">
    <header class="page-headline">
        <h1 class="h2">@ViewData["Title"]</h1>
        <button data-modal="true" data-target="#addProjectModal" class="btn btn-blue btn-add" type="button">Add Project</button>

    </header>

    <main class="content">
        <div class="surface"> 
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Client</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                             @foreach (var project in Model)
                        
                         {
                            <tr>
                                <td>@project.Name</td>
                                <td>@project.Client</td>
                                <td>@project.StartDate</td>
                                <td>@project.EndDate</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Projects", new { id = project.Id })" class="btn btn-blue">Edit</a>
                                    <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="btn btn-blue">Details</a>
                                    <a href="@Url.Action("Delete", "Projects", new { id = project.Id })" class="btn btn-blue">Delete</a>
                                </td>
                            </tr>
                         } 
                        }
                        else
                        {                        
                            <tr><td colspan="3">No projects available.</td></tr>                        
                        }
                      
                    </tbody>
                </table>
            </div>
                                                
        
        </div>
    </main>

</section>

<partial name="Partials/Modals/_AddProjectModal"  />